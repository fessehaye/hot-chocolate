---
import type { CollectionEntry } from "astro:content";

interface Props {
  drink: CollectionEntry<"hot-chocolate">;
  index: Number;
}
const { drink, index } = Astro.props;
---

<article
  data-tag={drink.slug}
  data-count={index + 1}
  class="mt-[100vh] min-h-[40vh] p-4 py-10 bg-chocolate-white text-gray-800 rounded-xl text-xl"
>
  <p class="mb-4">{drink.data.name}</p>
  <a href={drink.data.link} class="underline mb-10 block text-gray-600"
    >{drink.data.location}</a
  >
  <p class="text-gray-600">{drink.body}</p>
  <p></p>
</article>
